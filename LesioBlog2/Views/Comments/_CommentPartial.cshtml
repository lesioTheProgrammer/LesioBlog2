@model LesioBlog2_Repo.Models.Comment




<div style="padding-bottom: 0px;margin-left: 30px; font-size: 12px">
    @if (Request.IsAuthenticated)
    {
        
        @Html.ActionLink("Details", "Details", "Comments", new { id = Model.ID }, null)


        if (System.Web.HttpContext.Current.User.Identity.Name == ViewData["UserName"])
        {
            <span> || </span>
            @Html.ActionLink("Edit", "Edit","Comments", new { id = Model.ID }, null);
            <span> || </span>

            @Html.ActionLink("Delete", "Delete","Comments", new { id = Model.ID }, null)
        }
    }

</div>

