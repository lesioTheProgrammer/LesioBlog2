@model LesioBlog2_Repo.Models.Comment

@{
    ViewBag.Title = "Delete";
}

@if (Request.IsAuthenticated && System.Web.HttpContext.Current.User.Identity.Name == Model.User.NickName)
{

    <div style="margin-left:10px;">
        <h2>Are you sure you want to delete this?</h2>

    </div>
    <div>
        <hr />

        <div id="papito">
            <span style="float:left; margin-left:1.5%;" class="">
                Author: @Html.DisplayFor(modelItem => Model.User.NickName)
                <span style="font-size: 12px">

                    @Html.DisplayFor(modelItem => Model.AddingDate).ToString()
                </span>
                <span style="font-size: 12px">
                    Edited:
                    @Html.DisplayFor(modelItem => Model.EditingDate)
                </span>
            </span>
            <span style="float:right ; padding:8px">
                <span class="">
                    @Html.AntiForgeryToken()
                    @if (Request.IsAuthenticated)
                    {
                        <div id="kid">
                            <button class="colorA js-toggle-plusing"
                                    data-wpis-id="@Model.WpisID" data-plusy-count="@Model.Plusy">
                                @Html.DisplayFor(modelitem => Model.Plusy)
                            </button>
                        </div>
                    }
                    else
                    {
                        <div id="kid" style="margin-right:40px;">
                            @Html.DisplayFor(modelItem => Model.Plusy)
                        </div>

                    }
                </span>
            </span>
        </div>
        <div>
            <div style="border:groove 5px; border-radius:10px; border-color:lavenderblush;  background-color:ghostwhite; margin-left:1%; margin-right:1%">
                <br>
                @Html.DisplayFor(modelItem => Model.Content)
                <br />
                <div style="padding-bottom: 0px; font-size: 12px">
                </div>
            </div>
            <div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color col-md-offset-2 col-md-10 " style="margin-left:30px; margin-top:10px;">
                        <input type="submit" value="Delete" class="btn btn-warning" />
                        @Html.ActionLink("Back to list", "Index", "Wpis", null, new { @class = "btn btn-info", @style = "color:white" })

                    </div>

                }
            </div>
        </div>

        @*@using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }*@
    </div>


}

