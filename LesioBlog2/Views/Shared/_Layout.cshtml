<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px; padding-bottom: 0px;">
    <div style="width: auto;  background-color: aliceblue">

        @if (Request.IsAuthenticated)
        {
            <strong>@Html.Encode(User.Identity.Name)</strong>
            @Html.ActionLink("Log Out", "Logout", "User")
            <span> | </span>
            @Html.ActionLink("View all wpisy", "Index", "Wpis")
            <span> | </span>
            @Html.ActionLink("User control panel ", "Index", "User")
        }
        else
        {
            @Html.ActionLink("Register", "Registration", "User")
            <span> | </span>
            @Html.ActionLink("Log In", "Login", "User")
            <span> | </span>
            @Html.ActionLink("View all wpisy", "Index", "Wpis")
            <span> | </span>
            @Html.ActionLink("User control panel ", "Index", "User")

        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lesio Blog</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
